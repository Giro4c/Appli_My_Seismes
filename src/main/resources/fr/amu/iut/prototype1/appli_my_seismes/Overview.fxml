<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane prefHeight="600.0" prefWidth="1000" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.prototype1.appli_my_seismes.ControllerOverview">
    <tabs>

        <Tab closable="false" text="Données">
            <content>
                <VBox alignment="CENTER" spacing="50.0">

                    <HBox alignment="CENTER">
                        <Label text="Nombre total de seisme : " />
                        <Label fx:id="seismeTotaux" />
                    </HBox>

                    <HBox alignment="CENTER">
                        <Label text="Région la plus affectée par les séismes : " />
                        <Label fx:id="regionPlusAffecte" />
                    </HBox>

                    <HBox alignment="CENTER">
                        <Label text="Région la moins affectée par les séismes : " />
                        <Label fx:id="regionMoinsAffecte" />
                    </HBox>

                    <HBox alignment="CENTER" style="-fx-spacing: 0;">
                        <Label text="la ou les dates et régions des seisme les plus intense : " />
                        <Label fx:id="seismePlusIntense" />
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
                    </HBox>


                    <HBox alignment="CENTER">
                        <Label text="Nombre de seisme d'intensité supérieur à 5 : " />
                        <Label fx:id="totalSeismeSuperieurA5" />
                    </HBox>



                    <HBox alignment="CENTER">
                        <Label text="Intensité : " />
                        <Label fx:id="IntensiteMin" />
                        <Label fx:id="IntensiteMoy" />
                        <Label fx:id="IntensiteMax" />
                        <Label fx:id="IntensiteEtendu" />
                        <Label fx:id="IntensiteMediane" />
                        <Label fx:id="IntensiteEcartype" />
                    </HBox>

                    <HBox alignment="CENTER">
                        <Label text="Nombre de régions : " />
                        <Label fx:id="regionTotaux" />
                    </HBox>



                </VBox>
            </content>
        </Tab>
        <Tab closable="false" text="Pie">
            <content>
                <VBox>


                        <PieChart fx:id="Pie" prefHeight="600" prefWidth="600" />


                </VBox>
            </content>
        </Tab>
        <Tab closable="false" text="StackedBarChart">
            <content>
                <VBox>


                    <VBox>
                        <StackedBarChart fx:id="mostAffectedChart" prefHeight="563.0" prefWidth="960.0">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" fx:id="xAxisMostAffected" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxisMostAffected" side="LEFT" />
                            </yAxis>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </StackedBarChart>
                    </VBox>
                </VBox>
            </content>
        </Tab>
        <Tab closable="false" text="Pie2">
            <content>
                <VBox>

                    <PieChart fx:id="PieQualite" prefHeight="600" prefWidth="600" />

                </VBox>
            </content>
        </Tab>

        <Tab closable="false" text="BarChart">
            <content>
                <VBox>
                        <BarChart fx:id="intensityChart" prefHeight="563.0" prefWidth="960.0">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" fx:id="xAxisIntensity" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxisIntensity" side="LEFT" />
                            </yAxis>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </BarChart>
                </VBox>
            </content>
        </Tab>


    </tabs>
</TabPane>
