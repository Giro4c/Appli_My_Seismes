<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane prefHeight="600.0" prefWidth="1000" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.prototype1.appli_my_seismes.ControllerOverview">
    <tabs>

        <Tab closable="false" text="Données">
            <content>
                <VBox>

                    <HBox>
                        <Label text="Nombre total de seisme : "></Label>
                        <Label fx:id="seismeTotaux"></Label>
                    </HBox>

                    <HBox>
                        <Label text="Région la plus affectée par les séismes : "></Label>
                        <Label fx:id="regionPlusAffecte"></Label>
                    </HBox>

                    <HBox>
                        <Label text="la region et date du seisme le plus intense : "></Label>
                        <Label fx:id="seismePlusIntense"></Label>
                    </HBox>


                </VBox>
            </content>
        </Tab>
        <Tab closable="false" text="Pie">
            <content>
                <VBox>


                        <PieChart fx:id="Pie" prefHeight="800" prefWidth="800" />


                </VBox>
            </content>
        </Tab>
        <Tab closable="false" text="BarChart">
            <content>
                <VBox>


                    <VBox>
                        <StackedBarChart fx:id="mostAffectedChart">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" fx:id="xAxisMostAffected" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxisMostAffected" side="LEFT" />
                            </yAxis>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </StackedBarChart>
                    </VBox>
                </VBox>
            </content>
        </Tab>
        <Tab closable="false" text="Pie2">
            <content>
                <VBox>

                    <PieChart fx:id="PieQualite"></PieChart>

                </VBox>
            </content>
        </Tab>

    </tabs>
</TabPane>
